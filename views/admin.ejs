<!DOCTYPE html>
<html>
<head>
 <title>Admin</title>
 <link rel="stylesheet" href="public/css/style.css">
 <link rel="shortcut icon" href="assets/logo4.png"/>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fontawesome/4.7.0/css/font-awesome.min.css">
 <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
 <link href="https://fonts.googleapis.com/css?family=Arimo|Grenze|Quicksand|Ubuntu|Hepta+Slab&display=swap" rel="stylesheet">
 <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;1,300&display=swap" rel="stylesheet">
 <style>
 body {
 background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(images/login.jpeg);
 background-size: cover;
 background-attachment: fixed;
 }

 #container {
 position: absolute;
 height: auto;
 width: 80%;
 left: 10%;
 top: 27%;
 background: rgba(255, 255, 255, 0.9);
 border: 1px solid transparent;
 border-radius: 0px;
 text-align: center;
 margin-bottom: 10%;
 }

 #form {
 position: absolute;
 width: 100%;
 height: 100%;
 }

 input {
 padding: 10px;
 font-size: 20px;
 margin: 10px 10px;
 width: 80%;
 outline: 0;
 border: 0px transparent;
 border-radius: 10px;
 font-family: "Lato";
 } 

 #logo {
 margin-top: 5px;
 width: 100px;
 height: 100px;
 margin-bottom: 10px;
 }

 p {
 font-family: "Lato";
 }

 input[type="submit"] {
 margin-top: 25px;
 }

 input[type="submit"]:hover {
 opacity: 0.8;
 transition: 0.2s;
 }

 #menu {
 position: absolute;
 width: 70%;
 top: 14%;
 left: 15%;
 text-align: center;
 }

 .bm,.bf,.bfb {
 width: 30%;
 padding: 8px;
 font-family: 'Ubuntu';
 outline: none;
 margin: 4px;
 border-radius: 4px;
 font-size: 17px;
 border: 0px solid transparent;
 }

 #food {
 text-align: center;
 position: relative;
 width: 100%;
 }

 #feedback {
 text-align: center;
 position: relative;
 width: 100%;
 }

 #money {
 text-align: center;
 position: relative;
 width: 100%;
 }

 thead { 
 font-family: 'Lato';
 font-size: 20px;
 }

 tbody {
 font-family: 'Ubuntu';
 }

 th {
 padding: 10px;
 }

 td {
 padding: 6px;
 }

 th,
 td {
 text-align: center;
 border: 1px solid black;
 }

 table {
 width: 100%;
 border-collapse: collapse;
 border-radius: 10px;
 }

 ul {
 text-align: left;
 }
 </style>
</head>
<body>
    <div id="menu">
        <button class="bm" name="User" style="background: #000000;color:white">
            User List
        </button>
        <button class="bf" name="Food" style="background: rgb(255, 255, 255);">
            Food Orders
        </button>
        <button class="bfb" name="Feed" style="background: rgb(255, 255, 255);">
            Feedback
        </button>
    </div>
    <div id="container">
        <div id="user">
            <table id="user_table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Password</th>
                    </tr>
                </thead>
                <tbody>
                    <% user.forEach(function(x){ %>
                        <tr>
                            <td>
                                <%=x.first_name%>
                            </td>

                            <td>
                                <%=x.last_name%>
                            </td>
                            <td>
                                <%=x.username%>
                            </td>
                            <td>
                                <%=x.password%>

                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </div>
        <div id="food">
            <table id="food_table">
                <!--order_name: String,
    cost: Number,
    name: String,
    email_id: String,
    address: String,
    city: String,
    state: String,
    Zip: Number,
    nameoncard: String,
    ccn: String,
    expmonth: Number,
    expyear: Number,
    cvv: Number,-->
                <thead>
                    <tr>
                        <th>Order Name</th>
                        <th>Cost</th>
                        <th>Name</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    <% food.forEach(function(x){ %>
                        <tr>
                            <td>
                                <%=x.order_name%>
                            </td>

                            <td>
                                ₹
                                <%=x.cost%>
                            </td>
                            <td>
                                <%=x.name%>
                            </td>
                            <td>
                                <%=x.address%>,
                                    <%=x.city%>,
                                        <%=x.state%>

                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </div>
        <div id="feedback">
            <table id="feedback_table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Feedback</th>
                    </tr>
                </thead>
                <tbody>
                    <% feedback.forEach(function(x){ %>
                        <tr>
                            <td>
                                <%=x.name%>
                            </td>

                            <td>
                                <%=x.email%>
                            </td>
                            <td>
                                <%=x.message%>
                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </div>
    </div>
    <footer>
        <p id="copr">© OmniFood Pvt. Ltd.</p>
    </footer>
    <script>
        $('#user').hide();
        $('#feedback').hide();
        $('#food').hide();
        $('.bm').click(function() 
        {
           
            $('#user').show();
            $('#feedback').hide();
            $('#food').hide();
            $('.bm').css({
                "background": "rgb(0,0,0)",
                "color": "white"
            });
            $('.bf').css({
                "background": "rgb(255,255,255)",
                "color": "black"
            });
            $('.bfb').css({
                "background": "rgb(255,255,255)",
                "color": "black"
            });
        });
        $('.bf').click(function()
        {
            $('#user').hide();
            $('#feedback').hide();
            $('#food').show();
            $('.bf').css({
                "background": "rgb(0,0,0)",
                "color": "white"
            });
            $('.bm').css({
                "background": "rgb(255,255,255)",
                "color": "black"
            });
            $('.bfb').css({
                "background": "rgb(255,255,255)",
                "color": "black"
            });
        });
        $('.bfb').click(function()
        {
            $('#user').hide(); 
            $('#feedback').show();
            $('#food').hide();
            $('.bfb').css({
                "background": "rgb(0,0,0)",
                "color": "white"
            });
            $('.bf').css({
                "background": "rgb(255,255,255)",
                "color": "black"
            });
            $('.bm').css({
                "background": "rgb(255,255,255)",
                "color": "black"
            });
        });
        
    </script>
</body>
</html> 
