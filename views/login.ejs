<style type="text/css">
        body {
	 		background: linear-gradient(rgba(0, 0, 0, 0.589), rgba(0, 0, 0, 0.637)), url(images/login.jpeg);
	 	}
	 	#container {
	 		position: absolute;
	 		height: auto;
	 		width: 35%;
		 	left: 32.5%;
		 	top: 22%;
		 	background: rgba(255, 255, 255, 0.8);
		 	border: 1px solid transparent;
			border-radius: 10px;
		 	text-align: center;
		 	padding-bottom: 40px;
		 	margin-bottom: 80px;
	 	}

	 	#form {
		 	position: relative;
		 	width: 100%;
		 	height: 100%; 
	 	}

	 	input {
		 	padding: 10px;
		 	font-size: 20px;
		 	margin: 10px 10px;
		 	width: 80%;
		 	outline: 0;
		 	border: 0px transparent;
		 	border-radius: 10px;
		 	font-family: "Ubuntu";
		}

	 	i{
            font-size: 300%;
            margin-left:-10px;
         }

	 	p {
	 		font-family: "Ubuntu";
	 	}

	 	input[type="submit"] {
             margin-top: 25px;
             
	 	}

	 	input[type="submit"]:hover {
		 	opacity: 0.8;
		 	transition: 0.2s;
	 	}

	 	#user_admin {
		 	position: absolute;
		 	width: 35%;
		 	top: 14%;
		 	left: 32.5%;
		 	text-align: center;
	 	}

	 	.b {
		 	width: 30%;
		 	padding: 8px;
		 	font-family: 'Ubuntu';
		 	outline: none;
		 	margin: 4px;
		 	border-radius: 4px;
		 	border: 0px solid transparent; 
         }
         input[type=submit]{
                margin-top:15px;
                display: inline-block;
                padding: 10px 30px;
                font-weight: 300;
                text-decoration: none;
                border-radius:200px;
                -webkit-transition:background-color 0.3s,border 0.3s, color 0.3s;
                transition:background-color 0.3s,border 0.3s, color 0.3s;
    
            }
        input[type=submit]{
                font-size:80%;
            }
        input[type=submit]{
                margin-left:20px;
                margin-right:40px;
                 background-color: #e67e22;
                border:1px solid #e67e22;
                color:#fff;
            }
